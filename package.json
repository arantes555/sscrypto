  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/jsbn": "^1.2.29",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "@types/node-forge": "^0.7.11",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint-plugin-typescript": "^0.14.0",
    "jsbn": "^1.1.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "source-map-support": "^0.5.10",
    "standard": "^12.0.1",
    "typescript": "^3.2.4",
    "typescript-eslint-parser": "^22.0.0"
  }
